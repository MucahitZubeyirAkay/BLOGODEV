<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BLOGODEV</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.css" />
</head>

<body style="background-color:black" >
    <div style="background-color:orange">
        <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3" style="background-color:orange;">
            <div class="container">
                <a class = "navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ODEVBLOG</a>
                <button class= "navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Ana Sayda</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Hakkımızda</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav ml-auto">
                            @if (Context.Session.GetString("username") != null)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Auth" asp-action="Profile" asp-route-username="@Context.Session.GetString("username")">Profile</a>
                                </li>
                                 <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Auth" asp-action="LogOut">Log Out @Context.Session.GetString("username")</a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Auth" asp-action="Login">GİRİŞ YAP</a>
                                </li>
                            }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
                @RenderBody()
        </main>
    </div>

    </div>

    <footer style="background-color:orange" class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - ODEVBLOG - 
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
